<!--pages/join/index.wxml-->
<view>
  <form bindsubmit="submit">
    <view class="section">
      <view class="title">昵称</view>
      <input type="nickname" class="input" name="nickname" placeholder="输入你的昵称" /> 
   </view>
   <view class="section">
      <view class="title">学号</view>
      <input type="number" class="input" name="number" placeholder="输入你的学号" />
   </view>
   <view class="area">
   <!--当form中存在formType为submit的button标签时，点击button会触发form的bindsubmit绑定的函数-->
    <button style="margin: 30rpx 0" type="primary" formType="submit">提交</button>
    <button style="margin: 30rpx 0" formType="reset">重置</button>
   </view>
  </form>
</view>